// SWI Registers
_kernel_swi_regs inreg;
_kernel_swi_regs outreg;

// Sprite buffer
unsigned char *buffer;
extern int screen;
extern struct CompositionElement composition[128];
extern int current_element;
int lastprofile = 0;

int tick = 0;
int lasttick = 0;
extern int screen;

extern int game1_tick();

int game_hitbox_collide(int x1, int y1, int w1, int h1, int x2, int y2, int w2, int h2)
{
    if((x1 + w1) >= x2)
      if(x1 <= (x2 + w2))
        if((y1 + h1) >= y2)
          if(y1 <= (y2 + h2))
            return 1;

  return 0;
}

int main(int argc, char *argv[])
{
  sound_on();

  display_mode(DISPLAY_MODE);

  screen_clear();
  
  load_sprites("Spr");

  intro();

  display_mode(DISPLAY_MODE);
  screen_clear();
  
  game_setup();
  
  while(game1_tick());

  screen_clear();
  printf("you ded\n");
  screen_flipbuffer();

  free(buffer);

  return 0;
}
